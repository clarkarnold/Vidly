
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Genre</td>
                    <td>@Model.Genre.Name</td>
                </tr>
                <tr>
                    <td>Release Date:</td>
                    <td>@Model.ReleaseDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>
                        Added:
                    </td>
                    <td>@Model.DateAdded.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>
                        In Stock:
                    </td>
                    <td>@Model.NumberInStock</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>