    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink(
    "Add Movie",
    "New", 
    "Movies", 
    null, 
    new { @class = "btn btn-primary" }

)

<table id="movies" class="table table-striped">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
